{% extends 'base.html.twig' %}

{% block body %}
    <h1>Les sujets</h1>
    {% for topic in topics %}
        <a href="{{ path('app_topic_show', {'id': topic.id}) }}" class="btn btn-dark col-12 m-2">{{ topic.title}}</a>
    {% else %}
        <p>Il n'y a pas encore de sujet</p>
    {% endfor %}

