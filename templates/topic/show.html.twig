{% extends 'base.html.twig' %}

{% block title %}Topic{% endblock %}

{% block body %}
    <h1>Topic</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ topic.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ topic.description }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ topic.creationDate ? topic.creationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date de modification</th>
                <td>{{ topic.modificationDate ? topic.modificationDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <p>Créer par {{ topic.user.pseudo ? topic.user.pseudo : topic.user.email }}<p>

    <a href="{{ path('app_topic_index') }}">retour</a>

    <a href="{{ path('app_topic_edit', {'id': topic.id}) }}" class="btn btn-warning">modifier</a>

    {{ include('topic/_delete_form.html.twig') }}
{% endblock %}
